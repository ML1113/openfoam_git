// Which of the steps to run
castellatedMesh true;
snap            false;
addLayers       false;


geometry
{

    wallsWing
    {
        type            searchableBox;
        min             (-34 -1.7 0);
        max             ( 34  1.7 100);
    }
};

castellatedMeshControls
{
    maxLocalCells 1000000;
    maxGlobalCells 2000000;
    minRefinementCells 0;
    maxLoadUnbalance 0.10;
    nCellsBetweenLevels 2;
    features
    (
    );
    refinementSurfaces
    {  
        wallsWing
        {
            level (2 2);
            patchInfo
            {
                type wall;
            }
        }
        
    }

    resolveFeatureAngle 30;
    refinementRegions
    {
    }
    locationInMesh (40 40 1);
    allowFreeStandingZoneFaces no;
}


snapControls
{
    nSmoothPatch 3;
    tolerance 1.0;
    nSolveIter 30;
    nRelaxIter 5;
}

addLayersControls
{
    relativeSizes false;
    layers
    {
        wallsWing
        {
            nSurfaceLayers 3;

        }

    }

    expansionRatio 1.02;
    finalLayerThickness 0.5;
    finalLayerRatio 0.01;
    minThickness 0.01;
    nGrow 0;
    featureAngle 30;
    nRelaxIter 10;
    nSmoothSurfaceNormals 1;
    nSmoothNormals 3;
    nSmoothThickness 10;
    maxFaceThicknessRatio 0.5;
    maxThicknessToMedialRatio 0.3;
    minMedianAxisAngle 40;
    nBufferCellsNoExtrude 0;
    nLayerIter 100;
    nRelaxedIter 20;
}

meshQualityControls
{
    maxNonOrtho 65;
    maxBoundarySkewness 20;
    maxInternalSkewness 4;
    maxConcave 80;
    minVol 1e-200;
    minTetQuality 1e-9;
    minArea -1;
    minTwist 0.05;
    minDeterminant 0.001;
    minFaceWeight 0.05;
    minVolRatio 0.01;
    minTriangleTwist -1;

    nSmoothScale 4;
    errorReduction 0.75;

    relaxed
    {
        maxNonOrtho 75;
    }
}

